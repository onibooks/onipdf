{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "declarationDir": "types",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "target": "esnext"
  },
  "include": [
    "src/**/*",
    "../../global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ]
}